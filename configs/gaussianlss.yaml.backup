data:
  batch_size: 1
  dataset_dir: /workspace/GaussianLSS_MindSpore/data/nuscenes
  labels_dir: /workspace/GaussianLSS_MindSpore/data/processed
  num_workers: 1
  transform_config:
    augment_config:
      enable: false
      rotation_range: 5.0
      scale_range: 0.1
      translation_range: 0.1
    image_config:
      h: 224
      top_crop: 46
      w: 480
    image_data: true
    ped: true
    vehicle: true
deterministic: true
device:
  id: 0
  target: CPU
evaluation:
  detection:
    max_detections: 100
    nms_threshold: 0.5
    score_threshold: 0.1
  metrics:
  - segmentation_iou
  - detection_ap
  - center_mae
  - offset_rmse
  segmentation:
    ignore_index: 255
    threshold: 0.5
logging:
  level: INFO
  tensorboard:
    enable: true
    log_dir: /workspace/GaussianLSS_MindSpore/logs/tensorboard
  wandb:
    enable: false
    entity: null
    project: gaussianlss-mindspore
    tags:
    - mindspore
    - 3d-detection
    - bev
loss:
  center_weight: 1.0
  focal_alpha: 0.25
  focal_gamma: 2.0
  offset_weight: 0.5
  seg_weight: 1.0
  smooth_l1_beta: 1.0
  visibility_weight: 0.1
model:
  backbone:
    frozen_stages: -1
    name: efficientnet-b4
    out_indices:
    - 2
    - 3
    - 4
    - 5
    pretrained: true
  decoder:
    hidden_channels: 128
    in_channels: 256
    num_classes: 2
    type: BEVDecoder
  embed_dims: 256
  gaussian_params:
    depth_max: 61.0
    depth_num: 64
    depth_start: 1.0
    error_tolerance: 1.0
    img_h: 224
    img_w: 480
    opacity_filter: 0.05
  head:
    depth_num: 64
    feat_channels: 256
    in_channels: 256
    num_gaussians: 1000
    type: GaussianHead
  neck:
    in_channels:
    - 56
    - 112
    - 160
    - 272
    num_outs: 4
    out_channels: 256
    type: FPN
optimizer:
  beta1: 0.9
  beta2: 0.999
  eps: 1e-8
  lr: 0.0001
  momentum: 0.9
  name: adam
  weight_decay: 0.0001
profiling:
  enable: false
  output_dir: profiling
  profile_steps: 100
scheduler:
  decay_rate: 0.95
  gamma: 0.1
  min_lr: 1.0e-06
  step_size: 30
  type: cosine
  warmup_epochs: 5
  warmup_lr: 1.0e-05
seed: 42
training:
  amp_level: O0
  checkpoint_dir: /workspace/GaussianLSS_MindSpore/checkpoints
  dataset_sink_mode: true
  epochs: 50
  keep_checkpoint_max: 5
  log_interval: 10
  save_interval: 500
  val_interval: 1
visualization:
  alpha: 0.7
  bev_size:
  - 200
  - 200
  color_map: viridis
  enable: false
  output_dir: /workspace/GaussianLSS_MindSpore/visualizations
  show_bev: true
  show_center_points: true
  show_detections: true
  show_segmentation: true
